<h1>Articles</h1>
<% @articles.each do |article| %>
  <p><%= article.title %>
    <%= link_to 'Show content', article_path(article.id) %>
    <%= link_to 'Edit', edit_article_path(article.id) %>
    <%= link_to 'Delete', article_path(article), method: :delete %></p>
<% end %>

<%= link_to "Create a new article", new_article_path %>
